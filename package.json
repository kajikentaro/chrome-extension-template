{
  "name": "chrome-extension-template",
  "version": "1.0.0",
  "description": "The template for development of chrome-extension",
  "private": true,
  "scripts": {
    "watch": "webpack --mode=development --watch --config config/webpack.common.js",
    "build": "eslint . && rm -rf build/* && webpack --mode=production --config config/webpack.prod.js",
    "format": "prettier --write . && eslint --fix .",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.{ts,js,html,json}": [
      "prettier --write"
    ],
    "*.{ts,js,html}": [
      "eslint --fix"
    ]
  },
  "devDependencies": {
    "@types/chrome": "0.0.180",
    "@typescript-eslint/eslint-plugin": "^5.8.0",
    "@typescript-eslint/parser": "^5.8.0",
    "copy-webpack-plugin": "^10.2.0",
    "css-loader": "^6.5.1",
    "eslint": "^8.5.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard-typescript": "^1.0.3",
    "glob": "^7.2.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.1.0",
    "mini-css-extract-plugin": "^2.4.5",
    "path-browserify": "^1.0.1",
    "prettier": "^2.8.3",
    "sass": "^1.45.1",
    "sass-loader": "^12.4.0",
    "ts-loader": "^9.2.6",
    "tsconfig-paths-webpack-plugin": "^3.5.2",
    "typescript": "^4.5.4",
    "webpack": "^5.65.0",
    "webpack-cli": "^4.9.1",
    "zip-webpack-plugin": "^4.0.1"
  },
  "prettier": {
    "printWidth": 160
  }
}
